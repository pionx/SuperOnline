<div id="carrito" class="col-lg-4">
    
</div>

<script src="~/Scripts/jquery-1.11.2.min.js"></script>
<script src="~/Scripts/jumbo.js"></script>

<script>
    var array = @Html.Raw(Json.Encode(@ViewBag.lista));

    $('#lista-compras-titulo').html("Lista: "+array[0]);
    for(var i = 2; i < array.length; i++) {
        
        //document.getElementById('lista').innerHTML += array[i]+"<br>";
        document.getElementById('lista-compras-contenido').appendChild(listaItem(array[i]));
    }

    var articulosCarrito =  @Html.Raw(Json.Encode(@ViewBag.articulosCarrito));
    for(var i = 2; i < articulosCarrito.length; i++) {
        
        document.getElementById('carrito').appendChild(crearCarritoItem(articulosCarrito[i]));
    }
</script>