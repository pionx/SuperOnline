@model IEnumerable<SuperOnline_ASP_NET_MVC.Models.Producto>
@{
    ViewBag.Title = "Jumbo";
}
<link href="~/Content/themes/base/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/themes/base/mis-css/jumbo.css" rel="stylesheet" />
<h2>Jumbo</h2>

<div id="lista-compras" class="col-lg-2">
    <div id="lista-compras-titulo"></div>
    <div id="lista-compras-contenido"></div>
</div>


<div class="col-lg-10"></div>


<div id="articulos" class="col-lg-12">
    @foreach (var item in Model) {
    <article id="articulo-@(item.nombre.Replace(" ", "_"))" class="col-lg-3">
        <img src="~/Images/mis-imagenes/Imagenes-productos/@(item.nombre).PNG" />
        <div id="articulo-nombre"> @Html.DisplayFor(modelItem => item.nombre)</div>
        <div id="articulo-precio"> @Html.DisplayFor(modelItem => item.precio)</div>

    </article>
    }
</div>

